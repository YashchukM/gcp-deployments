resources:
- name: {{ env["name"] }}
  type: compute.v1.instance
  properties:
    zone: {{ properties["zone"] }}
    machineType: zones/{{ properties["zone"] }}/machineTypes/{{ properties["machine-type"] }}
    disks:
    - deviceName: boot
      type: PERSISTENT
      boot: true
      autoDelete: true
      initializeParams:
        sourceImage: {{ properties["source-image"] }}
    networkInterfaces:
    - network: {{ properties["network"] }}
      subnetwork: {{ properties["subnetwork"] }}
      accessConfigs:
      - name: External NAT
        type: ONE_TO_ONE_NAT
        natIP: {{ properties["local-ip"] }}
    tags:
      items: ["zookeeper"]
    metadata:
      items:
      - key: local-ip
        value: {{ properties["local-ip"] }}
      - key: cluster-ips
        value: {{ properties["cluster-ips"] }}
      - key: docker-user
        value: {{ properties["docker-user"] }}
      - key: startup-script
        value: |
          {{ imports["startup.sh"] | indent(10) }}
